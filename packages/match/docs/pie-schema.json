{
  "description": "Model for the @pie-elements/match Interaction",
  "type": "object",
  "properties": {
    "rows": {
      "description": "The rows of choices to be presented.",
      "type": "array",
      "items": [
        {
          "$ref": "#/definitions/MatchRow"
        }
      ],
      "minItems": 1,
      "additionalItems": {
        "anyOf": [
          {
            "$ref": "#/definitions/MatchRow"
          }
        ]
      }
    },
    "shuffled": {
      "description": "Indicates if the order of the rows should be randomly sorted on render",
      "type": "boolean"
    },
    "layout": {
      "description": "The number of columns to be presented",
      "type": "number"
    },
    "headers": {
      "description": "Array of strings for column headers",
      "type": "array",
      "items": [
        {
          "type": "string"
        }
      ],
      "minItems": 1,
      "additionalItems": {
        "anyOf": [
          {
            "type": "string"
          }
        ]
      }
    },
    "responseType": {
      "$ref": "#/definitions/ResponseType",
      "description": "Indicates if the conrol for responses should be single (radio) or multiple (checkbox)"
    },
    "id": {
      "description": "Identifier to identify the Pie Element in html markup, Must be unique within a pie item config.",
      "type": "string"
    },
    "element": {
      "description": "The html Element tag name",
      "type": "string"
    }
  },
  "required": [
    "element",
    "headers",
    "id",
    "layout",
    "responseType",
    "rows",
    "shuffled"
  ],
  "definitions": {
    "MatchRow": {
      "description": "One row in the match list.",
      "type": "object",
      "properties": {
        "id": {
          "description": "Identifier for a row",
          "type": "string"
        },
        "title": {
          "description": "Title that will be displayed for the row",
          "type": "string"
        },
        "values": {
          "description": "Array of boolean values indicating which columns are selected in the row",
          "type": "array",
          "items": [
            {
              "type": "boolean"
            }
          ],
          "minItems": 1,
          "additionalItems": {
            "anyOf": [
              {
                "type": "boolean"
              }
            ]
          }
        }
      },
      "required": [
        "id",
        "title",
        "values"
      ]
    },
    "ResponseType": {
      "enum": [
        "checkbox",
        "radio"
      ],
      "type": "string"
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}